<div class="lh">
  Administrace
</div>
<div class="l">
  <h3>Prihlasovani: <%= link_to Aplikace.prihlaseni_povoleno?.to_s, '#' %></h3>

  <h3>Zakladani: <%= link_to Aplikace.zakladani_hracu_povoleno?.to_s, '#' %></h3>

  <h3><%= link_to 'Zamkni hru', '#' %></h3>

  <h3><%= link_to 'Prepocti vliv', '#' %></h3>

  <h3><%= link_to 'Vynuluj vliv', '#', :confirm => 'Opravdu vynulovat vliv?' %></h3>

  <h3><%= link_to 'Spust prepocet', '#', :confirm => 'Opravdu přepočet?' %></h3>
  <hr/>
  <h3>Admin hracu</h3>
  <%= form_tag :zmen_prava do %>
      <%= select_tag :user_id_prava, options_for_select(User.order(:username).all.collect { |p| [p.username, p.id] }, {:include_blank => false}), :class => 'tab' %>
      <%= submit_tag 'Vyber', :class => 'oktab' %>
  <% end %>
  <hr/>
  <h3><%= link_to 'Pridej suroviny', '#' %></h3>

  <h3><%= link_to 'Prehled globals', '#' %></h3>

  <h3><%= link_to 'Prehled udalost', '#' %></h3>

  <h3><%= link_to 'Effect udalost', Effect %></h3>

  <h3><%= link_to 'Property udalost', Property %></h3>

  <h3><%= link_to 'Rozpusť landsraad', '#', :confirm => 'Opravdu rozpustit Landsraad?' %></h3>

  <h3><%= link_to 'Odvolej Imperátora', '#', :confirm => 'Opravdu Odvolat Imperátora a celé vedení Impéria?' %></h3>

  <h3><%= link_to 'Rails Admin', '#' %></h3>
  <hr/>
  <h3>Sweep session</h3>
  <%= form_tag :sweep_session do %>
      <%= text_field_tag :hodin, nil, :maxlength => 5, :class => 'tab' %>
      <%= submit_tag 'Sweep', :class => 'oktab' %>
  <% end %>
  <hr/>
  <h3><%= link_to 'WIPE', '#', :confirm => 'Opravdu WIPE?' %></h3>
  <hr/>
  <h3><%= link_to 'Pozemne jednotky', '#' %></h3>
  <h3><%= link_to 'Vzdusne jednotky', '#' %></h3>
  <hr/>
  <h3>Online hraci</h3>
  <% for user in online_users %>
      <%= link_to user.username, user %>
  <% end %>

</div>