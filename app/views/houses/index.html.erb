<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Solar</th>
      <th>Melange</th>
      <th>Research</th>
      <th>Material</th>
      <th>Influence</th>
      <th>Noticeboard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.type %></td>
        <td><%= house.name %></td>
        <td><%= house.solar %></td>
        <td><%= house.melange %></td>
        <td><%= house.research %></td>
        <td><%= house.material %></td>
        <td><%= house.influence %></td>
        <td><%= house.noticeboard %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

