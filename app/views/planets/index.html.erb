<p id="notice"><%= notice %></p>

<h1>Planets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>System</th>
      <th>Position</th>
      <th>Discovered at</th>
      <th>House</th>
      <th>Available to all</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td><%= planet.system_id %></td>
        <td><%= planet.position %></td>
        <td><%= planet.discovered_at %></td>
        <td><%= planet.house_id %></td>
        <td><%= planet.available_to_all %></td>
        <td><%= link_to 'Show', planet %></td>
        <td><%= link_to 'Edit', edit_planet_path(planet) %></td>
        <td><%= link_to 'Destroy', planet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

